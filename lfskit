remaster_() {

echo "remastering prosses"
#rm -rf  $TGT_LIVE_DISK >/dev/null 2>/dev/null
#mkdir $TGT_LIVE_DISK

}




#############################################
######### end of  LIVECD BUILDER / ##########
#########   remastering funtion    ##########
